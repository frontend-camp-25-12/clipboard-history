{
  "id": "com.example.clipboardhistory",
  "name": "剪贴板历史",
  "description": "记录剪贴板历史，支持文本、图片和文件的复制与粘贴",
  "version": "1.0.3",
  "logo": "icons/icon.png",
  "preload": "preload/preload.js",
  "content": "src/index.html",
  "background": true,
  "i18n": {
    "en": {
      "name": "Clipboard History",
      "description": "Support text, image and file copy, paste and mark"
    }
  },
  "window": {
    "width": 800,
    "height": 600,
    "disableTransition": false,
    "frame": true,
    "transparent": false,
    "resizable": true
  },
  "features": [
    {
      "code": "openClipboardHistory",
      "label": "查看历史剪贴板",
      "i18n": {
        "en": {
          "label": "Open Clipboard History"
        }
      },
      "hotKey": true,
      "searchable": true,
      "cmds": [
        "历史剪贴板",
        "clipboard history"
      ]
    },
    {
      "code": "searchClipboardHistory",
      "label": "搜索剪贴板",
      "i18n": {
        "en": {
          "label": "Search Clipboard History"
        }
      },
      "searchable": true,
      "cmds": [
        {
          "type": "any"
        }
      ]
    }
  ]
}
